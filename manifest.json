{
  "manifest_version": 3,
  "name": "Google Meet CC Capturer",
  "version": "3.0.0",
  "description": "Capture and download Google Meet closed captions in real-time. Features: auto-capture, live preview, customizable settings, keyboard shortcuts. No API required!",

  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },

  "permissions": [
    "storage",
    "activeTab"
  ],

  "host_permissions": [
    "https://meet.google.com/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content/meet-cc-simple.js"],
      "css": ["content/meet-cc-simple.css"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup/popup-simple.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    },
    "default_title": "Google Meet CC Capturer"
  }
}
